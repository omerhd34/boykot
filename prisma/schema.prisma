generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Category {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  slug        String   @unique
  iconKey     String
  description String?
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  brands      Brand[]
  // Yeni alan: Alt kategoriler
  subCategories String[] @default([])

  @@index([order])
}

model Brand {
  id                 String   @id @default(auto()) @map("_id") @db.ObjectId
  name               String
  slug               String   @unique
  description        String
  country            String
  website            String?
  img                String?
  isBoycotted        Boolean  @default(false)
  boycottReason      String?
  alternativeProducts String[] @default([])
  foundedYear        Int?
  founder            String?
  owner              String?
  categoryId         String   @db.ObjectId
  category           Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  // Yeni alan: Markanın ait olduğu alt kategori
  subCategory        String?

  // Alt marka ilişkisi
  parentBrandId      String?  @db.ObjectId
  parentBrand        Brand?   @relation("BrandSubBrands", fields: [parentBrandId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  subBrands          Brand[]  @relation("BrandSubBrands")
  
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}